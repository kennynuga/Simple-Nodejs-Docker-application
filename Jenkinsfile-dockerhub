pipeline {
    agent any 

     options {
        timeout(time: 10, unit: 'MINUTES')
     }
    environment {
   // DOCKERHUB_CREDENTIALS = credentials('kennynuga')
    APP_NAME = "kennynuga/jully:latest"
    }
    stages { 
        stage('SCM Checkout') {
            steps{
           git branch: 'main', url: 'https://github.com/kennynuga/Simple-Nodejs-Docker-application.git'
            }
        }

        stage('Build docker image') {
            steps {  
                sh 'docker build -t $APP_NAME:$BUILD_NUMBER .'
            }
        }
        stage('login to dockerhub') {
            steps{
               sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-dckr_pat_jssXnMCI_n5VZMi0aK-1C9RpFxQ'
            }
        }
        stage('push image') {
            steps{
                sh 'docker push $APP_NAME:$BUILD_NUMBER'
            }
        }
       // stage('Trigger ManifestUpdate') {
         //    steps{
           //     build job: 'argocd-manifest', parameters: [string(name: 'DOCKERTAG', value: env.BUILD_NUMBER)]     

           // } 
       // }      
    }
}


